<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
        </Grid.RowDefinitions>

    
        <Border Background="LightGoldenrodYellow" Grid.ColumnSpan="2">
            <Label FontSize="20" HorizontalAlignment="Center">Lista osób</Label>
        </Border>

     
        <Border Background="AliceBlue" Grid.Row="1" Margin="10">
            <StackPanel>
                <Label>Imię:</Label>
                <TextBox Name="fName" Margin="5"></TextBox>

                <Label>Nazwisko:</Label>
                <TextBox Name="lName" Margin="5"></TextBox>

                <Label>Wykształcenie:</Label>
                <ComboBox Name="education" Margin="5">
         
                    <ComboBoxItem>Podstawowe</ComboBoxItem>
                    <ComboBoxItem>Średnie</ComboBoxItem>
                    <ComboBoxItem>Wyższe</ComboBoxItem>
                </ComboBox>

                <Button Name="addButton" Content="Dodaj osobę" Margin="5" Click="Button_Click"></Button>
                <Button Name="removeButton" Content="Usuń osobę" Margin="5" Click="Button_Click_1"></Button>
                <Button Name="editButton" Content="Edytuj osobę" Margin="5" Click="Button_Click_2"></Button>
            </StackPanel>
        </Border>

   
        <ListBox Name="pListBox" Grid.Row="1" Grid.Column="1" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding FirstName}" />
                        <TextBlock Text="{Binding LastName}" />
                        <TextBlock Text="{Binding Education}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
